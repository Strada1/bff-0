{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "lib": [
      "DOM",
      "ES2017"
    ],
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,

    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules"],
  "include": ["./src"]
}